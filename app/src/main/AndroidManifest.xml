<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sastroman.angga.androidlearn">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.sastroman.angga.androidlearn.app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher2_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <activity
            android:name="com.sastroman.angga.androidlearn.view.MainActivity_"
            android:screenOrientation="portrait">
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />
        <intent-filter>
            <action android:name="android.intent.action.SEARCH" />
        </intent-filter>
        </activity>

        <activity
            android:name="com.sastroman.angga.androidlearn.view.LoginActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sastroman.angga.androidlearn.view.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sastroman.angga.androidlearn.view.RegisterActivity_"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait" />
    </application>

</manifest>